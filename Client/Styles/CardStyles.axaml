<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 基础卡片样式 -->
    <Style Selector="Border.Card">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Transitions">
            <Transitions>
                <ThicknessTransition Property="Margin" Duration="0:0:0.2" />
            </Transitions>
        </Setter>
    </Style>
    
    <!-- 卡片尺寸变体 -->
    <Style Selector="Border.Card.Small">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>
    
    <Style Selector="Border.Card.Medium">
        <Setter Property="Padding" Value="20"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>
    
    <Style Selector="Border.Card.Large">
        <Setter Property="Padding" Value="24"/>
        <Setter Property="CornerRadius" Value="12"/>
    </Style>
    
    <!-- 卡片深度变体 -->
    <Style Selector="Border.Card.Flat">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#DDDDDD"/>
    </Style>
    
    <Style Selector="Border.Card.Raised">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
    </Style>
    
    <!-- 卡片交互状态 -->
    <Style Selector="Border.Card.Interactive">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Border.Card.Interactive:pointerover">
        <Setter Property="Margin" Value="-2 -2 2 2"/>
    </Style>
    
    <!-- 颜色变体 -->
    <Style Selector="Border.Card.Primary">
        <Setter Property="Background" Value="{DynamicResource PrimaryBgBrush}"/>
    </Style>
    
    <Style Selector="Border.Card.Success">
        <Setter Property="Background" Value="{DynamicResource SuccessBgBrush}"/>
    </Style>
    
    <Style Selector="Border.Card.Warning">
        <Setter Property="Background" Value="{DynamicResource WarningBgBrush}"/>
    </Style>
    
    <Style Selector="Border.Card.Danger">
        <Setter Property="Background" Value="{DynamicResource DangerBgBrush}"/>
    </Style>
</Styles> 